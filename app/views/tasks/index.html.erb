<h1>ToDo一覧</h1>

<%= link_to "新しいタスクを追加", new_task_path %>

<ul>
    <% @tasks.each do |task| %>
        <li>
            <%= task.title %>
            <% if task.done %>
                完了！
            <% end %>

            <%= link_to "編集", edit_task_path(task) %> |
            <%= link_to "削除", task_path(task), method: :delete, data: { confirm: "削除しますか？" } %>
        </li>
    <% end %>
</ul>